<div class="container" id="login-page">
    <div class="row justify-content-center">
      <div class="col-sm-10 col-md-6 col-lg-4">
        <h1 id="sign-in-text">Create an Account</h1>
          <div class="row" id="login-form">
            <div class="col-12">
              <form method="POST" action="/signup">
                <input type="text" name="username" placeholder="Username" required title="Username must be at least 5 characters" class="field" autofocus pattern=".{5,}">
                <br>
                <input type="email" name="email" placeholder="Email Address" required class="field">
                <br>
                <input type="password" name="password" placeholder="Password" required class="field" title="Password must be at least 8 characters" pattern=".{8,}">
                <br>
                <input type="Submit" value="SIGN UP" id="sign-up-button">
              </form>
              <p id="login-link">Already have an account? <a href="/login">Log in Here</a></p>
              <% if flash.has?(:message) %>
                <p class="flash"><%= flash[:message] %></p>
              <% end %>
            </div>
          </div>
      </div>
    </div>
</div>
</div>
